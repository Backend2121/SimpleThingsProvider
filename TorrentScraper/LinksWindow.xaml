<Window x:Class="SimpleThingsProvider.LinksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleThingsProvider"
        mc:Ignorable="d"
        Title="Links Window" Height="450" Width="800">
    <Grid>
        <ListView x:Name="LinksList" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="500" Header="Infos" DisplayMemberBinding="{Binding Infos}"/>
                    <GridViewColumn Width="200" Header="Website Name" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Width="300" Header="Website Link" DisplayMemberBinding="{Binding Link}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
